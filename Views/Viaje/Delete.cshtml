@model Models.Entities.Viaje

@{
    ViewData["Title"] = "Delete";
}

<center>
    <br />
    <div class="card" style="max-width: 50.5em; background: bottom; border: none; margin: 20px">
        <div class="form-row" style="background: white;margin-top: 100px;">
            <div class="card-body" style="display:flex;align-items:center;justify-content:space-between">
                <h4 class="card-title" style="text-align: center;width: 100%;color:tomato">Eliminar Vehiculo</h4>
            </div>
        </div>
    </div>
    <br />
    <div class="row" style=" display: flex; align-items: center; justify-content: center;">
        <div class="" style="min-width: 40vh; border: 1px solid gray; padding: 20px; background: white">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.idViaje)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.idViaje)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.estado)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.estado)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.fechaInicial)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.fechaInicial)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.fechaFinal)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.fechaFinal)
                </dd>
            </dl>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <a asp-action="ListarViajes" class="btn btn-secondary ">Volver al Listar</a>
                </div>
                <div class="form-group col-md-6">
                    <a asp-action="Delete2" asp-route-id="@Model.idViaje" class="btn btn-danger">Eliminar</a>
                </div>

            </div>
        </div>
    </div>
</center>
