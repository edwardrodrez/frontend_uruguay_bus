@model Models.Entities.DtoPrecio

@{
    ViewData["Title"] = "Agregar Precio";
}

<center>
    <br />
    <div class="card" style="max-width: 50.5em; background: bottom; border: none; margin: 20px">
        <div class="form-row" style="background: white;margin-top: 100px;">
            <div class="card-body" style="display:flex;align-items:center;justify-content:space-between">
                <h4 class="card-title" style="text-align: center;width: 100%;color:dodgerblue">Agregar Precio a la Parada</h4>
            </div>
        </div>
    </div>
    <br />
    <div class="row" style=" display: flex; align-items: center; justify-content: center;">
        <div class="" style="min-width: 40vh; border: 1px solid gray; padding: 20px; background: white">
            <form asp-action="addPrecios2">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="number" name="idparadaAnterior" value="@ViewBag.idParadaAnteriror" class="form-control" hidden /><br />

                <div class="form-group">
                    <label asp-for="precio" class="control-label" style="display:flex"></label>
                    <input name="precio" class="form-control" />
                    <span asp-validation-for="precio" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FechaCaducidad" class="control-label" style="display:flex"></label>
                    <input name="FechaCaducidad" type="date" class="form-control" />
                    <span asp-validation-for="FechaCaducidad" class="text-danger"></span>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <a asp-action="ListarLineas" class="btn btn-secondary ">Volver al Listar</a>
                    </div>
                    <div class="form-group col-md-6">
                        <input type="submit" value="Agregar Precio" class="btn btn-primary btn-block" />
                    </div>
                </div>
            </form>
        </div>
    </div>



    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</center>