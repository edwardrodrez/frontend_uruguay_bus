@model IEnumerable<Models.Entities.Precios>

@{
    ViewData["Title"] = "VerPrecios";
}

<br />
<div class="card" style="background: bottom; border: none; margin: 20px">
    <div class="form-row" style="background: white;margin-top: 100px;">
        <div class="card-body" style="display:flex;align-items:center;justify-content:space-between">
            <h4 class="card-title">Lista de Precios de la Parada </h4>
            <a class="btn btn-primary" asp-action="addPrecios" asp-route-id="@ViewBag.idParadaAnteriror">Agregar Precio</a>
        </div>
    </div>
</div>
<br />


<div class="table-responsive" style="margin:20px">
    <table class="table table-bordered table-condensed table-striped table-hover sortable" style="width:95%">
        <thead style="background: royalblue; color: white;">
            <tr style="text-align:center">
                <th>
                    @Html.DisplayNameFor(model => model.precio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaCaducidad)
                </th>

            </tr>
        </thead>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="10">No hay Precios en esta Parada aun.</td>
            </tr>
        }
        else
        {
            <tbody>
                @foreach (var item in Model)
                {
                    <tr style="background:white">
                        <td>
                            @Html.DisplayFor(modelItem => item.precio)
                        </td>

                        @if (DateTime.Compare(item.FechaCaducidad, DateTime.Today) < 0)
                        {
                            <td style="background-color: #ff0000;">
                                @Html.DisplayFor(modelItem => item.FechaCaducidad)
                            </td>
                        }
                        else
                        {
                            <td style="background-color: #4cff00;">
                                @Html.DisplayFor(modelItem => item.FechaCaducidad)
                            </td>
                        }

                    </tr>
                }
            </tbody>
        }
    </table>
</div>