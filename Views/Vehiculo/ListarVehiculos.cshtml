@model IEnumerable<Models.Entities.Vehiculo>

@{
    ViewData["Title"] = "ListarVehiculos";
}

<br />
<div class="card" style="background: bottom; border: none; margin: 20px">
    <div class="form-row" style="background: white;margin-top: 100px;">
        <div class="card-body" style="display:flex;align-items:center;justify-content:space-between">
            <h4 class="card-title">Lista de Vehiculos en la Empresa</h4>
            <a asp-action="Create" class="btn btn-info">Añadir Vehiculo</a>
        </div>
    </div>
</div>
<br />

    <div class="table-responsive" style="margin:20px">
        <table class="table table-bordered table-condensed table-striped table-hover sortable" style="width:95%">
            <thead style="background: royalblue; color: white;">
                <tr style="text-align:center">
                    <th>
                        @Html.DisplayNameFor(model => model.matricula)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.modelo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.marca)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.cantAsientos)
                    </th>
                    <th>
                        Acciones
                    </th>
                </tr>
            </thead>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="10">No hay Vehiculos creados.</td>
                </tr>
            }
            else
            {

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr style="background:white">
                            <td>
                                @Html.DisplayFor(modelItem => item.matricula)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.modelo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.marca)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.cantAsientos)
                            </td>
                            <td>
                                <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.idVehiculo"><i class="fa fa-marker fa-lg"></i></a>
                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.idVehiculo"><i class="fa fa-trash-alt fa-lg"></i></a>

                            </td>
                        </tr>
                    }
                </tbody>
            }
        </table>
    </div>
